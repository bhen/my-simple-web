{% extends 'backend/layout.html.twig' %}

{% set iamhere = 'admin.mis-juegos' %}


{% block subcontent %}

    <div class="row-fluid">
        <div class="span12">
            <h2>Mis juegos</h2>

            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Título</th>
                        <th>Descripción</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                {% for juego in items %}
                    <tr>
                        <td>{{ juego.id }}</td>
                        <td>{{ juego.titulo }}</td>
                        <td><small>{{ juego.descripcion }}</small></td>
                        <td>
                            <a href="{{ urlFor('admin.edit-entity',{'entity':'juego','id':juego.id}) }}"
                               class="btn btn-primary">
                                    <i class="icon-align-left icon-edit icon-white"></i>
                               </a>
                            <a href=""
                               class="btn btn-danger">
                                    <i class="icon-align-left icon-remove-sign icon-white"></i>
                               </a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="4">No se han encontrado juegos</td></tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

{% endblock subcontent %}
